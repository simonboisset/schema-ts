{
  "name": "ts-v",
  "version": "0.4.5",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "schemas/*",
    "utils/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:lib": "turbo run build --filter=@ts-v/*",
    "build:doc": "turbo run build --filter=documentation",
    "publish:major": "turbo run publish:major --filter=@ts-v/*",
    "publish:minor": "turbo run publish:minor --filter=@ts-v/*",
    "publish:patch": "turbo run publish:patch --filter=@ts-v/*",
    "dev:doc": "turbo run dev --filter=documentation",
    "dev": "turbo run dev --parallel",
    "test": "yarn build:lib && vitest run",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@ts-v/kit": "*",
    "prettier": "latest",
    "turbo": "latest",
    "vitest": "^0.24.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120
  },
  "packageManager": "yarn@1.22.5"
}
