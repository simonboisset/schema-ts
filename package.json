{
  "name": "validest-turbo",
  "version": "0.4.5",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "schemas/*",
    "utils/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:lib": "turbo run build --filter=@validest/* --filter=validest --filter=monorepo-version",
    "monorepo-version": "monorepo-version",
    "build:doc": "turbo run build --filter=documentation",
    "publish:major": "turbo run publish:major --filter=@validest/* --filter=validest",
    "publish:minor": "turbo run publish:minor --filter=@validest/* --filter=validest",
    "publish:patch": "turbo run publish:patch --filter=@validest/* --filter=validest",
    "dev:doc": "turbo run dev --filter=documentation",
    "dev": "turbo run dev --parallel",
    "test": "yarn build:lib && vitest run",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "validest": "*",
    "monorepo-version": "*",
    "prettier": "latest",
    "turbo": "latest",
    "vitest": "^0.24.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120
  },
  "packageManager": "yarn@1.22.5"
}
