{
  "include": ["src/index.ts", "src/react/index.ts", "src/node/index.ts"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": ".",
    "declaration": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  }
}
